@section Scripts{
    @Scripts.Render("~/Scripts/ie10-viewport-bug-workaround.js")
    @Scripts.Render("~/Scripts/docs.min.js")
    @Scripts.Render("~/Scripts/modal.js")

    <script type="text/javascript">
        
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        function AjaxClientCreateUpdateGetComplete() {
            $.validator.unobtrusive.parse("#frm-client-create-update");
        }
    </script>
