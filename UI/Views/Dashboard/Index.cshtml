@section styles{

    <link href="@Url.Content("~/Content/dashboard.css")" rel="stylesheet" type="text/css" />
    
    <style type="text/css">
        .page-header {
            border-bottom: 1px solid grey !important;
            border-bottom: 1px solid rgba(170, 148, 148, 0.59) !important;
        }
        
    </style>

}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li class="active"><a href="#">Overview</a></li>
                <li><a href="#clients" data-toggle="tab">Clients</a></li>
                <li><a href="#orders" data-toggle="tab">Orders</a></li>
                <li><a href="#stock" data-toggle="tab">Stock</a></li>
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main tab-content">
            <h1 class="page-header" style="margin-top: 0 !important;">Dashboard</h1>

            <div class="tab-pane" id="clients">
                @Html.Action( "Index", "Client")
            </div>
            <div class="tab-pane" id="orders">
                @Html.Action("Index", "Order")
            </div>
            <div class="tab-pane" id="stock">
                @Html.Action("Index", "Stock")
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Scripts/ie10-viewport-bug-workaround.js")
    @Scripts.Render("~/Scripts/docs.min.js")
    @Scripts.Render("~/Scripts/modal.js")
}
