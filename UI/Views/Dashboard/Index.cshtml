@section styles{

    <link href="@Url.Content("~/Content/dashboard.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/simple-sidebar.css")" rel="stylesheet" type="text/css" />
    
    <style type="text/css">
        .page-header {
            border-bottom: 1px solid grey !important;
            border-bottom: 1px solid rgba(170, 148, 148, 0.59) !important;
        }
        
    </style>

}
<div id="wrapper">

    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="nav nav-sidebar sidebar-nav">
            <li class="sidebar-brand"><a href="#">Dashboard</a></li>
            <li class="active"><a href="#clients" data-toggle="tab">Clients</a></li>
            <li><a href="#orders" data-toggle="tab">Orders</a></li>
            <li><a href="#stock" data-toggle="tab">Stock</a></li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->
    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
    <!-- Page Content -->
    <div id="page-content-wrapper">
        
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 tab-content">
                    <div class="tab-pane active" id="clients">
                        @Html.Action( "Index", "Client")
                    </div>
                    <div class="tab-pane" id="orders">
                        @Html.Action("Index", "Order")
                    </div>
                    <div class="tab-pane" id="stock">
                        @Html.Action("Index", "StockLog")
                    </div>
                    

                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
</div><!-- /#wrapper -->

@section Scripts{
    @Scripts.Render("~/Scripts/ie10-viewport-bug-workaround.js")
    @Scripts.Render("~/Scripts/docs.min.js")
    @Scripts.Render("~/Scripts/modal.js")

    <script type="text/javascript">
        
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        function AjaxClientCreateUpdateGetComplete() {
            $.validator.unobtrusive.parse("#frm-client-create-update");
        }
    </script>
}
